//- Page template
doctype html
html(lang='en')

    include ../partials/header.pug

    append head-content
        
        //- SimpleLightbox plugin CSS
        link(href='https://cdnjs.cloudflare.com/ajax/libs/SimpleLightbox/2.1.0/simpleLightbox.min.css', rel='stylesheet')

    append html-body

        body
            
            #page-border

            #page-top.container-flow

                //- Header
                header
                    .container-fluid.py-5.px-0.mb-5
                        .col.text-center.text-uppercase
                            a.strike(
                                href='./'
                                title=''
                                style='color:var(--bs-'+var_color+')'
                                data-title=var_title
                            ) 
                                span 
                                    = var_title

                //- Main
                .container-md
                    .row.g-4.gx-lg-5

                        //- Nav
                        .col-lg-3.col-md-4.col-sm-12.col
                            include ../partials/nav.pug

                        .col-lg-9.col-md-8.col-sm-12
                            block main-content

                
                //- Footer
                footer.pt-3.pb-5.pb-3

                    .strike.font-monospace.mb-3(style='color:var(--bs-' + var_color + ')' title='') 
                    
                    .text-center.text-muted 
                        |   &copy; Elisavet Kalpaxi 2023

                include ../partials/footer.pug

        //- Bootstrap core JS
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js')

        //- SimpleLightbox plugin JS
        script(src='https://cdnjs.cloudflare.com/ajax/libs/SimpleLightbox/2.1.0/simpleLightbox.min.js')

        //- Core theme JS
        script(src='js/scripts.js')
